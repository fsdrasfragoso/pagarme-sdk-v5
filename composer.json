{
    "name": "fragososoftaware/pagarme-sdk",
    "description": "A Domain-Driven Design (DDD) SDK for integrating with the Pagar.me API.",
    "type": "library",
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^6.5",
        "nesbot/carbon": "^1.39",
        "symfony/console": "^5.4",
        "symfony/http-foundation": "^5.4",
        "vlucas/phpdotenv": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "7.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}
