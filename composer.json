{
    "name": "fragosoftware/pagarme-sdk",
    "description": "A Domain-Driven Design (DDD) SDK for integrating with the Pagar.me API.",
    "type": "library",
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^5.3.3|^6.2.1|^7.0",
        "guzzlehttp/psr7": "^1.4.1",
        "guzzlehttp/promises": "^1.0",
        "nesbot/carbon": "^1.39",
        "symfony/console": "^2.7.51",
        "symfony/http-foundation": "^2.7.51",
        "vlucas/phpdotenv": "^1"
    },
    "autoload": {
        "psr-4": {
            "FragosoSoftware\\PagarmeSdk\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "license": "MIT"
}
